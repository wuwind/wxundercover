.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.list-item {
  margin: 1%;
  width: 100%;
  height: 90rpx;
  /* float: left; */
  background: #4afcf333;
  line-height: 90rpx
}

.bootom_right {
  position: fixed;
  display: flex;
  flex-direction: column;
  right: 16rpx;
  bottom: 15rpx;
  z-index: 10;
  border-radius: 3rpx;
  border: 1rpx solid #ddd;
  background: #fff;
}