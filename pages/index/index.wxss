.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.martgintop30 {
  margin-top: 40rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 0px;
}
.modal-input {
  display: flex;
  background: #fff;
  border: 1px solid rgb(102, 102, 102);
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  /* font-size: 28rpx; */
}
.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}
.horizontal {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}